.Videos__List
  margin-top 30px

  .Video
    animation fadeInTop .5s ease
    animation-fill-mode forwards
    cursor pointer
    margin-bottom 30px
    opacity 0
    width calc(33% - 20px)

    +prefix-classes('Video__')
      .Image
        border-radius 15px
        margin-bottom 12px
        width 100%
        transition all .3s ease

      .Title
        font-size 19px
        font-weight 600
        margin-bottom 7px

      .Views
        background-color $danger
        border-radius 7px
        color #0e0d15
        display inline-block
        font-size 12px
        padding 2px 5px

    &:hover
      +prefix-classes('Video__')
        .Image
            box-shadow 0 10px 25px #120f21
            transform translateY(-10px)

.Videos__ListButton
  margin 60px 0 90px 0
  text-align center

  button
    background $danger
    border none
    border-radius: 50px;
    color $primary
    cursor pointer
    font-size 13px
    font-weight bold
    outline none
    height 39px
    width 139px
    transition background .3s ease

    &:hover
      background $danger-dark

    &:active
      transform scale(.95)