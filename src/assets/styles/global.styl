*
  box-sizing border-box

body
  margin 0
  padding 0
  font-family 'Lato', sans-serif

ul 
  margin 0
  padding 0

li
  list-style none

a
  text-decoration none

.Row
  padding 0 30px

.Center
  margin auto

.Flex 
  display flex
  flex-wrap wrap

  &.Middle
    align-items center

  &.SpaceBetween
    justify-content space-between

.Mobile
  display none

  @media screen and (max-width $small)
    display block

for size in (1..12)
  .W{size}
    width 8.33% * size

.MaxWidth
  max-width: 960px;

.CustomScroll
  &::-webkit-scrollbar
    width 10px
  
  &::-webkit-scrollbar-track
    background none

  &::-webkit-scrollbar-thumb
    background $grey
    border-radius 15px